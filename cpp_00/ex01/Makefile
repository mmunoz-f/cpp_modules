CC = clang++
CFLAGS = -Wall -Werror -Werror

TIME = $(shell date +'%d/%m/%Y %H:%M:%S')
M=

NAME =

SRCS =
OBJS = $(SRCS:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $(OBJS)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

push: fclean
	git add ../..
	git commit -m "$(TIME) - $M"

.PHONY: all clean fclean re push
